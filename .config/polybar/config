########## Module Definitions ##########

[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = false
index-sort = false
enable-click = false
enable-scroll = true
wrapping-scroll = false
reverse-scroll = false
fuzzy-match = true
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-default = ●
format = <label-state> <label-mode>
label-mode = %mode%
label-mode-padding = 2
label-mode-background = ${colors.color04_i3wmthemer}
label-focused = %icon%
label-focused-foreground = ${colors.color04_i3wmthemer}
label-focused-background = ${colors.color03_i3wmthemer}
#label-focused-underline = ${colors.color04_i3wmthemer} #fba922
label-focused-padding = 4
label-unfocused = %icon%
label-unfocused-padding = 4
label-visible = %icon%
label-visible-underline = ${colors.color04_i3wmthemer}
label-visible-padding = 4
label-urgent = %icon%
label-urgent-foreground = ${colors.color04_i3wmthemer}
label-urgent-background = ${colors.background_i3wmthemer}
label-urgent-padding = 4

[module/date]
type = internal/date
interval = 2
date = "%{A1:gsimplecal:}     %m.%d.%Y    %{A}"
date-alt = "    %A, %d. %B"
label = "%{O-60} %date%"
format-foreground = #ececec
format-padding = 10%

[module/time]
type = internal/date
interval = 1
time = " %H:%M"
time-alt = " %H:%M:%S"
format-padding = 10%
label = "%time%"
label-font = 1

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "  "
format-prefix-foreground = ${colors.foreground_i3wmthemer}
format-underline = #f90000
label = %percentage%%

[module/memory]
type = internal/memory
label = "%{A1:urxvt -e htop:}  %gb_used%%{A}"
format-padding = 2

[module/wireless-network]
