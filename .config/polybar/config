########## Bar Definitions ##########

[bar/top]

# Position
monitor = eDP-1
width = 100%
height = 20
fixed-center = true
padding = 2%
module-margin = 4
border-top-size = 5%
border-left-size = 5%
border-right-size = 5%

# Colors
